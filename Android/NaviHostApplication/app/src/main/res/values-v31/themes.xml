<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/ic_launcher_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="windowSplashScreenBackground">@color/design_default_color_secondary</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/black</item>
        <!-- 启动画面底部的 Brand 图片 require api 31-->
        <!--        <item name="android:windowSplashScreenBrandingImage">@drawable/brand_img</item>-->
        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>
</resources>